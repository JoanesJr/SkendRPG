<body id="login">
    <main class="container mt-5">
        <div class="row mt-5">
            <div class="col-12 d-flex flex-collumn justify-content-center aligns-items-center mt-5">
                <form enctype="multipart/form-data mt-5" action="registrar_usuario" method="post">
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Nome" required id="nome" name="nome" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control" placeholder="E-mail" required id="email" name="email" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" placeholder="Senha" required min="8" name="senha" id="senha">
                    </div>
                    <div class="mb-3">
                        <input type="file" class="form-control" placeholder="Imagem" required min="8" id="imagem" name="imagem">
                    </div>
                    <div class="form-group d-flex justify-content-center">
                        <button>Cadastrar</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</body>

